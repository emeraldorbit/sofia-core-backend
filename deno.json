{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext", "deno.window"],
    "types": ["deno.ns"],
    "strict": true
  },
  "fmt": {
    "exclude": ["node_modules", "dist"]
  },
  "lint": {
    "exclude": ["node_modules", "dist"]
  },
  "test": {
    "include": ["tests/**/*.test.ts", "supabase/**/*.test.ts"],
    "exclude": ["node_modules", "dist"]
  },
  "unstable": ["sloppy-imports"]
}