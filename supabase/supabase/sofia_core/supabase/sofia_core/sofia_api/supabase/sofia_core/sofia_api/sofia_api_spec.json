{
  "api": {
    "endpoint": "/v1/sofia",
    "method": "POST",
    "require_pipeline_integrity": true,
    "validate_request_schema": true
  },
  "request_schema": {
    "input_text": "string",
    "context": "object"
  },
  "response_schema": {
    "final_output": "string",
    "engine_trace": "object"
  },
  "errors": {
    "invalid_request": "Request does not match schema",
    "pipeline_failure": "One or more engines failed",
    "internal_error": "Unexpected system error"
  }
}
