{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["supabase/sofia_core/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["jest", "node"]
  },
  "include": ["supabase/sofia_core", "src", "tests", "config/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests/sofia_core_application_shell/execution",
    "tests/sofia_core_application_shell/pipeline",
    "supabase/sofia_core/deviation_engine/index.ts",
    "supabase/sofia_core/identity_filter/identity_filter.test.ts",
    "supabase/sofia_core/membrane_engine/membrane_engine.test.ts"
  ]
}