{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["supabase/sofia_core/*"]
    }
  },
  "include": ["supabase/sofia_core", "tests"],
  "exclude": ["node_modules", "dist"]
}
