{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*", 
    "tests/**/*", 
    "config/**/*", 
    "supabase/sofia_core/sofia_core_application_shell/**/*",
    "supabase/sofia_core/sofia_core_bootstrap.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "**/supabase/sofia_core/**/supabase/**"
  ]
}
